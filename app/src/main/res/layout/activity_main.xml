<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/display"
            tools:text="12345"
            android:textSize="36pt"
            android:textAlignment="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/display_result"
            tools:text="12345"
            android:textSize="36pt"
            android:textAlignment="center"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_margin="8dp"
            android:textSize="36pt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="2"
            android:textSize="36pt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/one"/>
        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="3"
            android:textSize="36pt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/two"/>
        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="+"
            android:textSize="36pt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/three"/>

        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="4"
            android:textSize="36pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/one"/>

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="5"
            android:textSize="36pt"
            app:layout_constraintLeft_toRightOf="@id/four"
            app:layout_constraintTop_toBottomOf="@id/two"/>
        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="6"
            android:textSize="36pt"
            app:layout_constraintLeft_toRightOf="@id/five"
            app:layout_constraintTop_toBottomOf="@id/three"/>
        <Button
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="-"
            android:textSize="36pt"
            app:layout_constraintTop_toBottomOf="@id/plus"
            app:layout_constraintLeft_toRightOf="@+id/six"/>
        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="7"
            android:textSize="36pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/four"/>

        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="8"
            android:textSize="36pt"
            app:layout_constraintLeft_toRightOf="@id/seven"
            app:layout_constraintTop_toBottomOf="@id/five"/>
        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="9"
            android:textSize="36pt"
            app:layout_constraintLeft_toRightOf="@id/eight"
            app:layout_constraintTop_toBottomOf="@id/six"/>
        <Button
            android:id="@+id/mulpl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="X"
            android:textSize="24pt"
            android:paddingBottom="25dp"
            android:paddingTop="20dp"
            app:layout_constraintLeft_toRightOf="@id/nine"
            app:layout_constraintTop_toBottomOf="@id/minus"/>
        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="0"
            android:textSize="36pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seven"/>

        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="="
            android:textSize="36pt"
            app:layout_constraintLeft_toRightOf="@id/zero"
            app:layout_constraintTop_toBottomOf="@id/eight"/>
        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="c"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="32pt"
            app:layout_constraintLeft_toRightOf="@id/equal"
            app:layout_constraintTop_toBottomOf="@id/nine"/>
        <Button
            android:id="@+id/divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="/"
            android:textSize="36pt"
            app:layout_constraintLeft_toRightOf="@id/clear"
            app:layout_constraintTop_toBottomOf="@id/mulpl"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>